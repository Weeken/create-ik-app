{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"types": ["node"],
		"lib": ["esnext", "dom", "dom.iterable", "scripthost"],
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"@comp/*": ["src/components/*"],
			"@assets/*": ["src/assets/*"],
			"@api/*": ["src/api/*"],
			"@utils/*": ["src/utils/*"],
			"@router/*": ["src/router/*"],
			"@store/*": ["src/store/*"]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx",
		"src/mocks/**/*.js"
	],
	"references": [{ "path": "./tsconfig.node.json" }]
}
